<xml>
<!-- Make sure we do this last, so we can benefit from all register actions, conditions and input sources. -->
<inputs>
	<inputaction input="keyboard" condition="ButtonPressed" name="Escape">
		<QuitGame/>
	</inputaction>
	
	<inputaction input="keyboard" condition="ButtonPressed" name="F7">
		<SendCommand command="SaveGame"/>
	</inputaction>
	<inputaction input="keyboard" condition="ButtonPressed" name="F8">
		<SendCommand command="LoadGame"/>
	</inputaction>
	<inputaction input="keyboard" condition="ButtonPressed" name="F9">
		<SendCommand command="ToggleMenu"/>
	</inputaction>
</inputs>
</xml>