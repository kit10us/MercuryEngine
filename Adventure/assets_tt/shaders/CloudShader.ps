// CLOUD SHADER
// THREE TEXTURED VERSION
ps.1.2 

def c0, 0.0, 0.0, 0.0, 1.0 
def c1, 1.0, 0.0, 0.0, 0.0 

tex t0 		// Solid
tex t1 		// Cloud1
tex t2 		// Cloud2

dp4_sat r0, c1, t1 	// Alpha of cloud1 in r0
lrp r0, r0, t1, t0 	// lerp from sky to cloud1
			
dp4_sat r1, c1, t2  // Alpha of cloud2 in r4
lrp r0, r1, t2, r0 	// lerp from sky+cloud1 to cloud2
					
mov r0.a, t0 		// Verify only solid's alpha
