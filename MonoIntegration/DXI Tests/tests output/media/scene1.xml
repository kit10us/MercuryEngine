<scene>

<addcustomcontrollers/>

<biscene render="true">
	<shape name="cube" type="box">
	<halfextents x="1" y="1" z="1"/>
	</shape>

	<shape name="sphere" type="sphere" radius="1">
	</shape>

	<shape name="pointring" type="cylinder">
	<halfextents x="1" y="1" z="2"/>
	</shape>

	<shape name="dashring" type="cylinder">
	<halfextents x="1" y="0.1" z="1"/>
	</shape>

	<shape name="cylinder" type="cylinder">
	<halfextents x="0.5" y="1" z="0.5"/>
	</shape>

	<shape name="plane" type="box">
	<halfextents x="1" y="0.1" z="1"/>
	</shape>

	<shape name="cone" type="cone" radius="1" height="2">
	</shape>

	<shape name="tiny" type="capsule" radius=".5" height="1.2">
	</shape>
</biscene>

<addpaths source="paths1.xml"/>

<geometry name="cube" type="shape" source="ShapeCube.xml"/>
<geometry name="pointfield" type="shape" source="ShapePointField.xml"/>
<geometry name="pointring" type="shape" source="ShapePointRing.xml"/>
<geometry name="dashring" type="shape" source="ShapeDashRing.xml"/>
<geometry name="pyramid" type="shape" source="ShapePyramid.xml"/>
<geometry name="circle" type="shape" source="ShapeCircle.xml"/>
<geometry name="sphere" type="shape" source="ShapeSphere.xml"/>
<geometry name="cylinder" type="shape" source="ShapeCylinder.xml"/>
<geometry name="tube" type="shape" source="ShapeTube.xml"/>
<geometry name="plane" type="shape" source="ShapePlane.xml"/>
<geometry name="cone" type="shape" source="ShapeCone.xml"/>
<geometry name="tiny" type="mesh" source="tiny.x"/>
<geometry name="test" type="shape" source="ShapePyramid.xml"/>

<addobject name="cube" geometry="cube" physics="cube">
<position x="-4.5" y="13" z="0"/>
</addobject>

<addobject name="pointfield" geometry="pointfield" physics="sphere">
<position x="-1.5" y="13" z="0"/>
</addobject>

<addobject name="pointring" geometry="pointring" physics="cylinder">
<position x="1.5" y="13" z="0"/>
</addobject>

<addobject name="dashring" geometry="dashring" physics="dashring">
<position x="4.5" y="13" z="0"/>
</addobject>

<addobject name="pyramid" geometry="pyramid">
<position x="-4.5" y="10" z="0"/>
</addobject>

<addobject name="circle" geometry="circle" physics="dashring">
<position x="-1.5" y="10" z="0"/>
</addobject>

<addobject name="sphere" geometry="sphere" physics="sphere">
<position x="1.5" y="10" z="0"/>
</addobject>

<addobject name="cylinder" geometry="cylinder" physics="cylinder">
<position x="4.5" y="10" z="0"/>
</addobject>

<addobject name="tube" geometry="tube" physics="cylinder">
<position x="-4.5" y="7" z="0"/>
</addobject>

<addobject name="plane" geometry="plane" physics="plane">
<position x="-1.5" y="7" z="0"/>
</addobject>

<addobject name="cone" geometry="cone" physics="cone">
<position x="1.5" y="7" z="0"/>
</addobject>

<addobject name="tiny" geometry="tiny" physics="tiny">
<position x="0" y="12" z="0"/>
<!--
<geometryrotation type="rotationaxis" x="1" y="0" z="0" rotation="-1.5707963"/>
-->
<geometryscale value="0.005"/>
<geometryposition x="0" y=".6" z="0"/>
</addobject>

<controller object="tiny" type="walker"/>

<bimodify object="tiny">
<!--<setLinearFactor x="1" y="0" z="1"/>-->
<setAngularFactor x="0" y="1" z="0"/>
<setSleepingThresholds linear="0" angular="0"/>
</bimodify>

<addobject name="camera">
</addobject>

<controller object="camera" type="camerafollow" follow="tiny" distance="10">
<orbit x="0" y="1" z="0" rotation="-1.57079"/>
</controller>

<!--
<controller object="camera" type="path" path="camera" looping="true"/>
-->

<setcamera>camera</setcamera>

</scene>